{% extends 'NestleWebBundle::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/jasny-bootstrap.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/jquery.dataTables.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/bootstrap-colorpicker.css') }}" rel="stylesheet" type="text/css" media="all"/>
{% endblock %}

{% set user_role = user.level %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {% include 'NestleWebBundle:Misc:notifications.html.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <h1 class="modal-title">CYCLE-PLAN: ADD</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
            <div class="panel">
                <div class="panel-body">

                    <ol class="breadcrumb">
                        <li><a href="{{ path('nestle_web_cycle_plan') }}">Cycle Plan</a></li>
                        <li class="active">Add</li>
                    </ol>
                    <form role="form" enctype="multipart/form-data" method="POST">
                        <div class="modal-header" id="addCyclePlan">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label for="cp_title">Title</label>
                                        <input type="text" required="required" name="cp_title" id="cp_title"
                                               class="form-control input-lg">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <br/>

                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="cp_status">Status:</label>
                                    <select name="cp_status" id="cp_status" class="form-control" required>
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="cp_date">Date</label>
                                    <input type="date" id="cp_date" name="cp_date" value="" class="form-control" required>
                                </div>
                            </div>

                        </div>
                        <hr/>
                        <div class="form-group">
                            <label for="cp_file">Upload File</label>
                            <input name="cp_file" type="file" id="cp_file" class="file" data-show-upload="false"
                                   data-dFile="" required>
                        </div>

                        <button type="submit" class="btn btn-warning pull-right">ADD NEW CYCLE PLAN</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jasny-bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-colorpicker.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/colorpicker.js') }}"></script>
    <script src="{{ asset('js/colorpicker-color.js') }}"></script>

    <script>
        $('#flashNotif').fadeOut(2500);

        {#$(".file-download").fileinput({#}
        {#allowedFileExtensions: ["pdf"],#}
        {#maxFileSize: 2000,#}
        {#maxFilesNum: 1,#}
        {#initialPreview: [#}
        {#'<a download="{{ asset( "uploads/buyers-guide/" ~ ci.contentBody ) }}"href="{{ asset( "uploads/buyers-guide/" ~ ci.contentBody ) }}"class="downloads large"> <i class="fa fa-file-pdf-o left"></i><i class="glyphicon glyphicon-save right" aria-hidden="true"></i><p><span>{{ ci.contentBody }}</span><span class="add-info">Download File</span></p> </a>',#}
        {#]#}
        {#});#}


        $("#cp_file").fileinput({
            allowedFileExtensions: ["pdf", "jpg", "jpeg", "png"],
            maxFilesNum: 1,
            showPreview: [
                '',

            ]
        });


    </script>


{% endblock %}

