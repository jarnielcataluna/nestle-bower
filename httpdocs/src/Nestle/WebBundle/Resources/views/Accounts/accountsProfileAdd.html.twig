{% extends 'NestleWebBundle::base.html.twig' %}

{% set user_role = user.level %}

{% block stylesheets %}
    <link href="{{ asset('css/jasny-bootstrap.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/jquery.dataTables.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/dataTables.colVis.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" type="text/css" media="all"/>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {% include 'NestleWebBundle:Misc:notifications.html.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
            <div class="panel">
                <div class="panel-body">

                    <ol class="breadcrumb">
                        <li><a href="{{ path('nestle_web_account_leads') }}">Accounts</a></li>
                        <li class="active">Add</li>
                    </ol>

                    <form action=""
                          id="editProfileForm" method="POST" role="form">
                        <div class="modal-header" id="addProfile">
                            <div class="form-group">
                                <label for="pwd">Store Name:</label>
                                <input type="text" class="form-control input-lg" required="required" id="storeName" name="storeName"
                                       value="{{ account.name }}">
                            </div>
                        </div>

                        <div class="modal-body restaurantProfile" id="addProfile">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="pwd">Category:</label>
                                        <select class="form-control" id="category" name="category" required="required">
                                            <option value="1" >
                                                Combi
                                            </option>
                                            <option value="2" >
                                                Carinderia
                                            </option>
                                            <option value="3" >
                                                Kapihan
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Bower Assigned:</label>
                                        <select name="bower" required="required" id="bower" class="form-control">
                                            {% if allBowers %}
                                                {% for ab in allBowers %}
                                                    <option value="{{ ab.id }}">{{ ab.fname }} {{ ab.lname }}</option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Contact Person:</label>
                                        <input type="text" class="form-control" required="required" id="contactPerson" name="contactPerson">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Contact No.:</label>
                                        <input type="text" class="form-control" required="required" id="contactNumber" name="contactNumber">
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Region:</label>
                                        <select class="form-control" id="region" required="required" name="region">
                                            {% if allRegions %}
                                                {% for ar in allRegions %}
                                                    <option value="{{ ar.id }}">{{ ar.region }}</option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Province:</label>
                                        <select class="form-control" id="province" required="required" name="province">

                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">City/Municipality:</label>
                                        <select class="form-control" id="city" required="required" name="city">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="pwd">Area:</label>
                                    <select class="form-control" id="area" required="required" name="area">
                                    </select>
                                </div>
                            </div>

                            <div class="row" id="new-area-container" style="display:none">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="pwd">New Area:</label>
                                        <input type="text" name="new_area" class="form-control" id="new_area" required="required">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Latitude: </label>
                                        <input type="text" name="latitude" id="area"  class="form-control" value=""/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pwd">Longitude:</label>
                                        <input type="text" name="longitude" id="area"  class="form-control" value=""/>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="pwd">Street Address:</label>
                                        <input type="text" name="address" id="address" required="required" class="form-control" value=""/>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="pwd">Best From:</label>
                                        <select class="form-control" id="bestFrom" required="required" name="bestFrom">
                                            <option value="6:00 AM">6:00 AM</option>
                                            <option value="7:00 AM">7:00 AM</option>
                                            <option value="8:00 AM">8:00 AM</option>
                                            <option value="9:00 AM">9:00 AM</option>
                                            <option value="10:00 AM">10:00 AM</option>
                                            <option value="11:00 AM">11:00 AM</option>
                                            <option value="12:00 PM">12:00 PM</option>
                                            <option value="1:00 PM">1:00 PM</option>
                                            <option value="2:00 PM">2:00 PM</option>
                                            <option value="3:00 PM">3:00 PM</option>
                                            <option value="4:00 PM">4:00 PM</option>
                                            <option value="5:00 PM">5:00 PM</option>
                                            <option value="6:00 PM">6:00 PM</option>
                                            <option value="7:00 PM">7:00 PM</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="pwd">Best To:</label>
                                        <select class="form-control" id="bestTo" name="bestTo" required="required">
                                            <option value="6:00 AM">6:00 AM</option>
                                            <option value="7:00 AM">7:00 AM</option>
                                            <option value="8:00 AM">8:00 AM</option>
                                            <option value="9:00 AM">9:00 AM</option>
                                            <option value="10:00 AM">10:00 AM</option>
                                            <option value="11:00 AM">11:00 AM</option>
                                            <option value="12:00 PM">12:00 PM</option>
                                            <option value="1:00 PM">1:00 PM</option>
                                            <option value="2:00 PM">2:00 PM</option>
                                            <option value="3:00 PM">3:00 PM</option>
                                            <option value="4:00 PM">4:00 PM</option>
                                            <option value="5:00 PM">5:00 PM</option>
                                            <option value="6:00 PM">6:00 PM</option>
                                            <option value="7:00 PM">7:00 PM</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="pwd">Day:</label>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="monday" value="1"> Monday
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="tuesday" value="1"> Tuesday
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="wednesday" value="1"> Wednesday
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="thursday" value="1"> Thursday
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="friday" value="1"> Friday
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="saturday" value="1"> Saturday
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="pwd">Frequency:</label>
                                        <input type="text" class="form-control" required="required" id="frequency" name="frequency"
                                               value="{{ account.frequency }}">
                                    </div>
                                </div>
                            </div>
                            <hr>

                            <button type="submit" class="btn btn-warning pull-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/jasny-bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.dataTables.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.colVis.min.js') }}"></script>

    <script>

        var cities = [];
        var provinces = [];
        var areas = [];




        {% if allCities %}
            {% for ac in allCities %}
                var city = {"city": "{{ ac.city}}", "province_id": {{ ac.provinceId }}, "id": {{ ac.id }} };
                cities.push(city);
            {% endfor %}
        {% endif %}

        {% if allProvinces %}
            {% for ap in allProvinces %}
                var province = {"province": "{{ ap.province}}", "region_id": {{ ap.regionId }}, "id": {{ ap.id }} };
                provinces.push(province);
            {% endfor %}
        {% endif %}

        {% if allProvinces %}
            {% for ar in allArea %}
                var area = {"area": "{{ ar.area}}", "city_id": {{ ar.cityId }}, "id": {{ ar.id }} };
                areas.push(area);
            {% endfor %}
        {% endif %}

        $('document').ready(function(){
            changeProvince();
            changeCity();
            changeArea();
            addNewArea();
        });


        $('#region').change(function(){
            changeProvince();
            changeCity();
            changeArea();
            addNewArea();
        });


        $('#province').change(function(){
            changeCity();
            changeArea();
            addNewArea();
        });

        $('#city').change(function(){
            changeArea();
            addNewArea();
        });

        $('#area').change(function(){
            addNewArea();
        });


        function changeArea(){
            $("#area").find('option').remove().end();
            for(var x = 0; x < areas.length; x++){
                if($('#city').val() == areas[x]["city_id"]){
                    $('<option>').val(areas[x]["id"]).text(areas[x]["area"]).appendTo('#area');
                }

            }

            $('<option>').val(0).text('Add New Area').appendTo('#area');
        }

        function changeCity(){
            $("#city").find('option').remove().end();
            for(var x = 0; x < cities.length; x++){
                if($('#province').val() == cities[x]["province_id"]){
                    $('<option>').val(cities[x]["id"]).text(cities[x]["city"]).appendTo('#city');
                }

            }
        }

        function changeProvince(){
            $("#province").find('option').remove().end();
            for(var x = 0; x < provinces.length; x++){
                if($('#region').val() == provinces[x]["region_id"]){
                    $('<option>').val(provinces[x]["id"]).text(provinces[x]["province"]).appendTo('#province');
                }

            }
        }

        function addNewArea(){
            if($('#area').val() != 0){
                $('#new-area-container').hide();
                $('#new_area').removeAttr('required');
            }else{
                $('#new-area-container').show();
                $('#new_area').attr('required');
            }
        }
    </script>

    <script>
        $('#flashNotif').fadeOut(2500);
    </script>
{% endblock %}